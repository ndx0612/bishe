{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login",
			"style": {
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false,
				"navigationStyle": "custom" // 取消原生导航栏
			}
		},
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}, {
			"path": "pages/found/index",
			"style": {
				"navigationBarTitleText": "发现",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "#ffffff",
		"navigationBarTitleText": "uView",
		"navigationBarBackgroundColor": "#0faeff",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#0faeff", // 字体选中以后颜色
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/home/index",
			"iconPath": "static/home.png", // 选中之前图标
			"selectedIconPath": "static/home_s.png", // 选中之后图标
			"text": "首页"
		}, {
			"pagePath": "pages/found/index",
			"iconPath": "static/discover.png",
			"selectedIconPath": "static/discover_s.png",
			"text": "发现"
		}, {
			"pagePath": "pages/center/index",
			"iconPath": "static/user.png",
			"selectedIconPath": "static/user_s.png",
			"text": "我"
		}]
	}
}
